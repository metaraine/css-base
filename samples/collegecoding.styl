/******************************
 * Functions
 ******************************/
vendor(prop, args)
  -moz-{prop} args
  -webkit-{prop} args
  {prop} args

border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)


/******************************
 * Defaults
 ******************************/

body
  font-family "Open Sans"
  padding-top 20px
  padding-bottom 40px

h1,h2,h3
  font-weight normal
  line-height 1.5em

a
  text-decoration none

/******************************
 * Page Elements
 ******************************/


/******************************
 * Components
 ******************************/

.cf:before, .cf:after
    content " "
    display table
.cf:after
    clear both
.cf
    *zoom 1

a.muted
  color #999
  text-decoration none

.container-narrow
  margin 0 auto
  max-width 700px
  hr
    margin 30px 0

.jumbotron
  text-align center
  h1
    font-weight 300
    font-size 72px
    line-height 1
  .btn
    font-size 21px
    padding 14px 24px

.marketing
  margin 60px 0
  p + h4
    margin-top 28px

.client-list 
  float left
  text-align right
  ul
    list-style-type none

.def-list
  td:first-child
    text-align right
    vertical-align top
    font-weight bold
    padding-right 15px
    white-space nowrap

.input-itty
  width 2em
